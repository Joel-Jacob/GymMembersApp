<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343838"
    tools:context=".View.RegistrationActivity">

    <TextView
        android:id="@+id/titleText_registration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Registration"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textColor="#008C9E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nameEdit_registration"/>

    <TextView
        android:id="@+id/nameTitle_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="24sp"
        android:textAlignment="viewEnd"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:textColor="#008C9E"
        app:layout_constraintTop_toBottomOf="@+id/titleText_registration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nameEdit_registration"
        app:layout_constraintBottom_toTopOf="@+id/planListView"
        />

    <EditText
        android:id="@+id/nameEdit_registration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#008C9E"
        android:hint="FirstName LastName"
        android:textSize="16dp"
        android:textColor="#008C9E"
        android:textColorHint="#008C9E"
        app:layout_constraintTop_toBottomOf="@+id/titleText_registration"
        app:layout_constraintStart_toEndOf="@+id/nameTitle_registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/planListView"
        />

    <ListView
        android:id="@+id/planListView"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_margin="16dp"
        android:background="@drawable/button_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEdit_registration"
        app:layout_constraintBottom_toTopOf="@+id/registerButton_registration"/>

    <Button
        android:id="@+id/registerButton_registration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Register"
        android:background="@drawable/button_bg"
        android:textColor="#00DFFC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planListView"/>


</androidx.constraintlayout.widget.ConstraintLayout>